{
  "name": "flexbox-playground",
  "version": "1.0.0",
  "description": "Single page of Flexbox tinkering fun.",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/everettanthony/flexbox-playground.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/everettanthony/flexbox-playground/issues"
  },
  "dependencies": {
    "babel-preset-es2015-native-modules": "^6.9.4",
    "express": "^4.16.2",
    "pre-commit": "^1.2.2"
  },
  "homepage": "https://github.com/everettanthony/flexbox-playground",
  "devDependencies": {
    "autoprefixer": "^7.2.6",
    "babel": "^6.23.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.2",
    "babel-eslint": "^7.2.3",
    "babel-plugin-async-to-promises": "^1.0.5",
    "babel-preset-es2015": "^6.24.1",
    "clean-css": "^4.1.11",
    "eslint": "^4.19.1",
    "gulp": "^3.9.1",
    "gulp-connect": "^5.5.0",
    "gulp-sass": "^3.2.1",
    "livereload": "^0.6.3",
    "node-sass": "^4.9.0",
    "nodemon": "^1.17.3",
    "npm-run-all": "^4.1.1",
    "npm-watch": "^0.3.0",
    "parallelshell": "^3.0.2",
    "postcss": "^6.0.21",
    "uglify-js": "^3.3.22",
    "webpack": "^3.11.0"
  },
  "scripts": {
    "build": "npm run build-js && npm run build-sass",
    "build-sass": "node js/build_tools/transpile-sass.js",
    "build-js": "eslint --fix js/app/ && webpack && node js/build_tools/transpile-javascript.js",
    "critical-css": "node js/build_tools/criticalcss.js",
    "dev": "npm-run-all --parallel watch livereload",
    "livereload": "livereload . -e txt -x js/app/admin/,js/app/components/,js/app/forms/,js/app/libs,js/app/pages/,js/app/utils/",
    "eslint": "eslint js/app/",
    "watch": "npm-watch",
    "watch-js": "eslint --fix js/app/ && webpack",
    "webpack": "webpack"
  },
  "watch": {
    "build-sass": {
      "patterns": "/css/sass/",
      "extensions": [
        "scss"
      ]
    },
    "watch-js": {
      "patterns": "/js/app/",
      "extensions": [
        "js",
        "jsx"
      ],
      "ignore": [
        "/js/app/dev/",
        "/js/app/dist/",
        "/js/app/main.js"
      ]
    }
  }
}
